{
  "name": "pomodoro-todo-app",
  "version": "1.0.0",
  "description": "番茄待办提醒 - 结合番茄工作法和任务管理的桌面应用",
  "main": "src/main/main.js",
  "homepage": ".",
  "scripts": {
    "start": "concurrently \"cross-env BROWSER=none npm run start:react\" \"wait-on http://localhost:3000 && cross-env ELECTRON_START_URL=http://localhost:3000 electron .\"",
    "start:react": "react-scripts start",
    "start:electron": "electron .",
    "build": "react-scripts build",
    "package": "npm run build && electron-builder",
    "db:init": "node src/database/init-db.js",
    "db:test": "node src/database/test-db.js",
    "db:seed": "node src/database/seed-data.js",
    "test": "./test-all.sh",
    "test:all": "./test-all.sh && npm run db:test"
  },
  "keywords": [
    "pomodoro",
    "todo",
    "productivity",
    "electron",
    "react"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dayjs": "^1.11.10",
    "electron-store": "^8.1.0",
    "mysql2": "^3.6.5",
    "node-notifier": "^10.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "antd": "^5.11.5",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^27.1.3",
    "electron-builder": "^24.9.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "wait-on": "^7.2.0",
    "web-vitals": "^2.1.4"
  },
  "build": {
    "appId": "com.pomodoro.todo",
    "productName": "番茄待办提醒",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "build/**/*",
      "src/main/**/*",
      "src/database/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
